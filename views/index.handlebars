<div class="jumbotron">
  <h1>Eat Da Burgers!</h1>
</div>
<div class="container">
  <div class="row">

    <div class="leftBout col-sm-4 col col-md-4 col-lg-4">
      <h2>Burgers that are not devoured!</h2>
      <ul class="leftB">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4 choiceBout ">
      <h2>Add a Burger of Your Choise!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add a Burger</button>
      </form>
       <ul class="choice-pre-burgers">
        {{#each pre-burgers}}
           
        {{/each}}
    </div>

    <div class="rightBout col-sm-4 col-md-4 col-lg-4">
      <h2>Burgers that are already devoured!</h2>
      <ul class="rightB">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>